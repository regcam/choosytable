# Development Configuration with Mock Authentication
# Copy this to .env for local testing without Google OAuth

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Security - Generate with: python3 -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=dev_secret_key_for_testing_only_not_for_production

# MongoDB Configuration  
MONGO_DBNAME=choosytable_dev
MONGO_URI=mongodb://localhost:27017/choosytable_dev

# Enable Mock Authentication (no Google OAuth needed)
USE_MOCK_AUTH=true

# Caching Configuration
MEMCACHED_HOST=localhost

# Optional: You can still set these but they won't be used in mock mode
# GOOGLE_CLIENT_ID=not_needed_in_mock_mode
# GOOGLE_CLIENT_SECRET=not_needed_in_mock_mode